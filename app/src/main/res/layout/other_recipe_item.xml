<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/otherRecCard"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/otherRecImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_image_24" />

        <ImageView
            android:id="@+id/image_gradient"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/image_bottom_overlay" />

        <TextView
            android:id="@+id/otherRecTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="25dp"
            android:text="Here is sample"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="195dp"
            android:src="@drawable/baseline_access_time_24" />

        <TextView
            android:id="@+id/otherRecTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/poppins_medium"
            android:maxLength="7"
            android:text="30 mins"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:emojiCompatEnabled="true"
            tools:ignore="RtlHardcoded,SmallSp" />

        <RatingBar
            android:id="@+id/recRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="185dp"
            android:isIndicator="true"
            android:numStars="4"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:stepSize="0.1"
            android:theme="@style/RatingBar" />


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>