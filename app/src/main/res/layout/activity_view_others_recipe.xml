<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_fill"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewOthersRecipeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Recipes"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_medium"
        android:textSize="25sp"
        android:layout_marginStart="115dp" />
    <ImageView
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textAlignment="center"
        android:layout_marginTop="70dp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_medium"
        android:text="Explore Delicious Recipes Shared by Others!"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <androidx.appcompat.widget.SearchView
        android:layout_marginTop="105dp"
        android:gravity="center_horizontal"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="50dp"
        android:id="@+id/search"
        app:iconifiedByDefault="false"
        app:searchHintIcon="@drawable/baseline_search_24"
        app:queryHint="Search..."
        android:focusable="false"
        android:background="@drawable/text_bg"
        app:closeIcon="@drawable/baseline_close_24"
        app:searchIcon="@drawable/baseline_search_24" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/logo_1"
        android:layout_marginTop="15dp"
        android:layout_marginStart="345dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerView"
        android:scrollbars="vertical"
        android:layout_margin="15dp"
        android:layout_below="@+id/search"/>

</RelativeLayout>