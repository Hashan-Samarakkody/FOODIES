<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:backgroundTint="#F3FFEC">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:backgroundTint="#7DC572">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/recImage"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_image_24"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <TextView
            android:id="@+id/recTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/recImage"
            android:singleLine="false"
            android:fontFamily="@font/inter_tight_medium"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/recTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="235dp"
            android:layout_marginTop="26dp"
            android:layout_toEndOf="@+id/recImage"
            android:fontFamily="@font/inter_tight_medium"
            android:text="Time"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <RatingBar
            android:numStars="4"
            android:isIndicator="true"
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:scaleX="0.45"
            android:scaleY="0.45"
            android:layout_marginStart="15dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_marginStart="280dp"
            android:layout_marginTop="25dp"
            android:layout_width="17dp"
            android:layout_height="17dp"
            app:srcCompat="@drawable/baseline_access_time_25" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>